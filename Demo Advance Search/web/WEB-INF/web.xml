<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RectController</servlet-name>
        <servlet-class>controller.RectController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RectView</servlet-name>
        <servlet-class>view.RectView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenticationController</servlet-name>
        <servlet-class>controller.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestController</servlet-name>
        <servlet-class>controller.TestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>controller.emp.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateController</servlet-name>
        <servlet-class>controller.emp.CreateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateController</servlet-name>
        <servlet-class>controller.emp.UpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteController</servlet-name>
        <servlet-class>controller.emp.DeleteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateDeptController</servlet-name>
        <servlet-class>controller.dept.CreateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterController</servlet-name>
        <servlet-class>controller.emp.FilterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertReqController</servlet-name>
        <servlet-class>controller.request.InsertReqController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RectController</servlet-name>
        <url-pattern>/rect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RectView</servlet-name>
        <url-pattern>/view/rect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticationController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestController</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/emp/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateController</servlet-name>
        <url-pattern>/emp/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateController</servlet-name>
        <url-pattern>/emp/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteController</servlet-name>
        <url-pattern>/emp/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateDeptController</servlet-name>
        <url-pattern>/dept/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterController</servlet-name>
        <url-pattern>/emp/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertReqController</servlet-name>
        <url-pattern>/request/insert</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
